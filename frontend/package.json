{
  "name": "zotero-styles-repo",
  "license": "AGPL",
  "version": "0.2.0",
  "description": "",
  "private": true,
  "repository": "",
  "browserslist": "firefox >= 68, chrome >=67, edge >= 15, safari >= 10, last 2 versions, not dead, ie 11",
  "type": "module",
  "scripts": {
    "build": "NODE_ENV=production run-p 'build:js -s' 'build:scss -s' && npm run build:postprocess",
    "build:js": "mkdir -p build/static && NODE_ENV=production rollup -c",
    "build:scss": "for f in scss/*.scss; do sass --no-source-map $f build/css/`basename $f .scss`.css; done;",
    "clean": "rimraf build lang",
    "devel:js": "rollup -c -w",
    "devel:scss": "for f in scss/*.scss; do sass --embed-source-map --watch $f build/css/`basename $f .scss`.css; done;",
    "build:postprocess": "postcss build/css/style.css --use autoprefixer --use cssnano --no-map -r",
    "start": "mkdir -p build && run-p 'devel:js -s' 'devel:scss -s'"
  },
  "dependencies": {
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "core-js": "^3.23.5",
    "lodash": "^4.17.21",
    "rollup-plugin-filesize": "^9.1.2",
    "rollup-plugin-sizes": "^1.0.4",
    "rollup-plugin-terser": "^7.0.2",
    "tether-drop": "^1.4.2",
    "vidom": "=0.1.7",
    "whatwg-fetch": "^3.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/eslint-parser": "^7.18.9",
    "@babel/plugin-transform-runtime": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "autoprefixer": "^10.4.7",
    "cssnano": "^5.1.12",
    "eslint": "^8.20.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-cli": "^10.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.77.0",
    "sass": "^1.53.0",
    "stylelint": "^14.9.1",
    "stylelint-config-recommended-scss": "^7.0.0",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-scss": "^4.3.0"
  }
}
